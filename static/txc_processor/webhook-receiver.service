[Unit]
Description=TXC Workflow Webhook Receiver
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/pt-analytics/static/txc_processor
Environment="PYTHONUNBUFFERED=1"
ExecStart=/usr/bin/python3 -u /home/ubuntu/pt-analytics/static/txc_processor/webhook_receiver.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
